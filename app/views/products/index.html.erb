
<% @products.each do |product| %>
  <h1><%= product.name %></h1>
  <div>
    <%= truncate product.description %>
  </div>
<% end %>

<script>
  $(function() {
    $(".js-more").on('click', function() {
      let id = $(this).data("id");
      $.get("/products/" + id + "/description", function())
    })
  })
</script>
